<div class="featured-collections-gallery">
  <div class="headline-holder">
    <h2
      class="hometitle h4-style align-center has-paging"
      data-cc-animate
      data-cc-animate-delay="0.3s">
      <span>{{ section.settings.sectionheadline | escape }}</span>
    </h2>

    <div class="arrows-holder">
      <div class="single-arrow previous-gallery">
        <img src="{{ 'slider-arrow.svg' | asset_url }}" />
      </div>
      <div class="single-arrow next-gallery">
        <img src="{{ 'slider-arrow.svg' | asset_url }}" />
      </div>
    </div>
  </div>

  <div class="gallery-wrapper">
    {%- for block in section.blocks -%}
      <div class="single-item">
        <div class="image-holder">
          <img
            src="{{ block.settings.image | img_url: '1024x1024' }}"
            alt="{{ block.settings.image.alt | escape }}"
            class="rimage__image">

          <a href="{{ block.settings.link }}" class="view-collection button btn btn--secondary">{{ block.settings.button_label }}</a>
        </div>
        <div class="single-item-info">
          <h3>{{ block.settings.headline }}</h3>
          <div class="rte">
            <p>
              {{ block.settings.description }}
            </p>
          </div>
        </div>
      </div>
    {%- endfor -%}
  </div>

</div>

{% schema %}
  {
    "name": "Collections Gallery",
    "class": "section-gallery",
    "settings": [

      {
        "id": "sectionheadline",
        "type": "text",
        "label": "Gallery Headline",
        "default": "SHOP THE COLLECTIONS"
      }
    ],
    "blocks": [
      {
        "type": "image",
        "name": "Image",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          },
          {
            "type": "text",
            "id": "headline",
            "label": "Headline",
            "default": "Headline"
          },
          {
            "type": "textarea",
            "id": "description",
            "label": "Descripitoin",
            "default": "Descripitoin"
          },
          {
            "type": "text",
            "id": "button_label",
            "label": "Button"
          }, {
            "type": "url",
            "id": "link",
            "label": "Link"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Collections Gallery",
        "category": "Image",
        "settings": {},
        "blocks": [
          {
            "type": "image"
          }, {
            "type": "image"
          }, {
            "type": "image"
          }
        ]
      }
    ]
  }
{% endschema %}